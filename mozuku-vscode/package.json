{
  "name": "mozuku-lsp",
  "displayName": "MoZuku Japanese Linter",
  "description": "Japanese text analysis and proofreading LSP - detects grammar issues like duplicate particles, ra-dropping, and comma limits. Includes Wikipedia integration and semantic highlighting.",
  "version": "0.1.0",
  "publisher": "mozuku",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "japanese",
    "日本語",
    "linter",
    "grammar",
    "proofreading",
    "校正",
    "MeCab",
    "形態素解析"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/client/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "japanese",
        "aliases": ["Japanese", "日本語"],
        "extensions": [".ja.txt", ".ja.md"],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MoZuku Japanese Linter",
      "properties": {
        "mozuku.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable MoZuku Japanese linter"
        },
        "mozuku.targetLanguages": {
          "type": "array",
          "default": ["plaintext", "markdown", "japanese", "latex", "html", "javascript", "typescript", "javascriptreact", "typescriptreact", "python", "rust", "c", "cpp"],
          "items": { "type": "string" },
          "description": "List of language IDs to analyze"
        },
        "mozuku.minJapaneseRatio": {
          "type": "number",
          "default": 0.1,
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Minimum ratio of Japanese characters required for analysis"
        },
        "mozuku.warningMinSeverity": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 4,
          "enum": [1, 2, 3, 4],
          "enumDescriptions": ["Error only", "Warning and above", "Information and above", "All including hints"],
          "description": "Minimum severity level for warnings (1=Error, 2=Warning, 3=Information, 4=Hint)"
        },
        "mozuku.enableWikipedia": {
          "type": "boolean",
          "default": true,
          "description": "Enable Wikipedia summary in hover information for nouns"
        },
        "mozuku.rules.commaLimit": {
          "type": "boolean",
          "default": true,
          "description": "一文で使用できる読点「、」を制限する"
        },
        "mozuku.rules.commaLimitMax": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "description": "一文で許容する読点「、」の最大数"
        },
        "mozuku.rules.adversativeGa": {
          "type": "boolean",
          "default": true,
          "description": "逆接の接続助詞「が」が同一文で複数回出現する場合に警告する"
        },
        "mozuku.rules.adversativeGaMax": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "description": "一文内で許容する逆接「が」の最大回数"
        },
        "mozuku.rules.duplicateParticle": {
          "type": "boolean",
          "default": true,
          "description": "同じ助詞が連続する場合に警告する (二重助詞)"
        },
        "mozuku.rules.duplicateParticleMaxRepeat": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "description": "同じ助詞が連続で許容される最大回数"
        },
        "mozuku.rules.adjacentParticles": {
          "type": "boolean",
          "default": true,
          "description": "助詞が隣接して連続する場合に警告する"
        },
        "mozuku.rules.adjacentParticlesMaxRepeat": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "description": "同種の助詞が隣接して許容される最大回数"
        },
        "mozuku.rules.conjunctionRepeat": {
          "type": "boolean",
          "default": true,
          "description": "同じ接続詞が連続する場合に警告する (改行でリセット)"
        },
        "mozuku.rules.conjunctionRepeatMax": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "description": "同じ接続詞が連続で許容される最大回数"
        },
        "mozuku.rules.raDropping": {
          "type": "boolean",
          "default": true,
          "description": "ら抜き言葉を検出する"
        },
        "mozuku.warnings.particleDuplicate": {
          "type": "boolean",
          "default": true,
          "description": "Detect duplicate particles (二重助詞) like をを, がが"
        },
        "mozuku.warnings.particleSequence": {
          "type": "boolean",
          "default": true,
          "description": "Detect invalid particle sequences like がは, をは"
        },
        "mozuku.warnings.particleMismatch": {
          "type": "boolean",
          "default": true,
          "description": "Detect particle-verb mismatches (experimental)"
        },
        "mozuku.warnings.sentenceStructure": {
          "type": "boolean",
          "default": false,
          "description": "Detect sentence structure issues (experimental)"
        },
        "mozuku.warnings.styleConsistency": {
          "type": "boolean",
          "default": false,
          "description": "Detect style inconsistency (experimental)"
        },
        "mozuku.warnings.redundancy": {
          "type": "boolean",
          "default": false,
          "description": "Detect redundant expressions (experimental)"
        }
      }
    },
    "configurationDefaults": {
      "editor.semanticHighlighting.enabled": true,
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "noun": "#c8c8c8",
          "noun.numeric": "#b5cea8",
          "noun.proper": "#dcdcaa",
          "verb": "#569cd6",
          "adjective": "#4fc1ff",
          "adverb": "#9cdcfe",
          "particle": "#d16969",
          "auxiliary": "#87CEEB",
          "conjunction": "#d7ba7d",
          "symbol": "#808080",
          "interjection": "#b5cea8",
          "prefix": "#c8c8c8",
          "suffix": "#c8c8c8",
          "unknown": "#aaaaaa"
        }
      }
    },
    "commands": [
      {
        "command": "mozuku.analyzeDocument",
        "title": "MoZuku: Analyze Current Document"
      },
      {
        "command": "mozuku.showTokenInfo",
        "title": "MoZuku: Show Token Information"
      }
    ],
    "semanticTokenTypes": [
      { "id": "noun", "description": "名詞 (Noun)" },
      { "id": "verb", "description": "動詞 (Verb)" },
      { "id": "adjective", "description": "形容詞 (Adjective)" },
      { "id": "adverb", "description": "副詞 (Adverb)" },
      { "id": "particle", "description": "助詞 (Particle)" },
      { "id": "auxiliary", "description": "助動詞 (Auxiliary verb)" },
      { "id": "conjunction", "description": "接続詞 (Conjunction)" },
      { "id": "symbol", "description": "記号 (Symbol)" },
      { "id": "interjection", "description": "感動詞 (Interjection)" },
      { "id": "prefix", "description": "接頭詞 (Prefix)" },
      { "id": "suffix", "description": "接尾辞 (Suffix)" }
    ],
    "semanticTokenModifiers": [
      { "id": "proper", "description": "固有名詞 (Proper noun)" },
      { "id": "numeric", "description": "数値 (Numeric)" },
      { "id": "kana", "description": "仮名 (Kana)" },
      { "id": "kanji", "description": "漢字 (Kanji)" }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src --quiet",
    "lint:strict": "oxlint src --deny-warnings",
    "lint:fix": "oxlint src --fix",
    "test": "vitest run",
    "check": "npm run typecheck && npm run lint:strict",
    "package": "vsce package --no-dependencies"
  },
  "dependencies": {
    "kuromoji": "^0.1.2",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/kuromoji": "^0.1.3",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0",
    "oxlint": "^0.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
